{
  final TicketGrantingTicket ticketGrantingTicket=this.remoteCentralAuthenticationService.createTicketGrantingTicket(TestUtils.getCredentialsWithSameUsernameAndPassword());
  final String serviceTicket=this.remoteCentralAuthenticationService.grantServiceTicket(ticketGrantingTicket.getId(),TestUtils.getService());
  this.remoteCentralAuthenticationService.delegateTicketGrantingTicket(serviceTicket,TestUtils.getCredentialsWithDifferentUsernameAndPassword("",""));
  fail("IllegalArgumentException expected.");
}
