{
  final X509Certificate[] certs=new X509Certificate[files.length];
  int i=0;
  for (  String file : files) {
    try {
      certs[i++]=(X509Certificate)CryptReader.readCertificate(new ClassPathResource(file).getInputStream());
    }
 catch (    Exception e) {
      throw new RuntimeException("Error creating certificate at " + file,e);
    }
  }
  return certs;
}
