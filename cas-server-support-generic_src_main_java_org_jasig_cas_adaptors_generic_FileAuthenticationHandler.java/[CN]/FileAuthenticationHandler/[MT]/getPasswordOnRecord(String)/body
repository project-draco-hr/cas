{
  try (final BufferedReader bufferedReader=new BufferedReader(new InputStreamReader(this.fileName.getInputStream(),Charset.defaultCharset()))){
    String line=bufferedReader.readLine();
    while (line != null) {
      final String[] lineFields=line.split(this.separator);
      final String userOnRecord=lineFields[0];
      final String passOnRecord=lineFields[1];
      if (username.equals(userOnRecord)) {
        return passOnRecord;
      }
      line=bufferedReader.readLine();
    }
  }
   return null;
}
