{
  final Thread thread=new Thread(new Runnable(){
    @Override public void run(){
      buildMetadataResolverAggregate();
    }
  }
);
  thread.start();
  final JobDetail job=JobBuilder.newJob(this.getClass()).withIdentity(this.getClass().getSimpleName().concat(UUID.randomUUID().toString())).build();
  final Trigger trigger=TriggerBuilder.newTrigger().withIdentity(this.getClass().getSimpleName().concat(UUID.randomUUID().toString())).withSchedule(SimpleScheduleBuilder.simpleSchedule().withIntervalInMinutes(this.refreshIntervalInMinutes).repeatForever()).build();
  final SchedulerFactory schFactory=new StdSchedulerFactory();
  final Scheduler sch=schFactory.getScheduler();
  sch.start();
  sch.scheduleJob(job,trigger);
}
