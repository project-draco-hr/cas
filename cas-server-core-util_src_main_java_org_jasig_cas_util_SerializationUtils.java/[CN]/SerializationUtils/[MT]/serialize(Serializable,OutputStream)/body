{
  ObjectOutputStream out=null;
  try {
    out=new ObjectOutputStream(outputStream);
    out.writeObject(object);
  }
 catch (  final IOException e) {
    throw new SerializationException(e);
  }
 finally {
    if (out != null) {
      try {
        out.close();
      }
 catch (      final IOException e) {
        throw new SerializationException(e);
      }
    }
  }
}
