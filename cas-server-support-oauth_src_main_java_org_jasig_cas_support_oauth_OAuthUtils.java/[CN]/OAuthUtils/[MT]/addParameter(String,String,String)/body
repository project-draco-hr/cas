{
  final StringBuilder sb=new StringBuilder();
  sb.append(url);
  if (url.indexOf('?') >= 0) {
    sb.append('&');
  }
 else {
    sb.append('?');
  }
  sb.append(name);
  sb.append('=');
  if (value != null) {
    try {
      sb.append(URLEncoder.encode(value,"UTF-8"));
    }
 catch (    final UnsupportedEncodingException e) {
      throw new RuntimeException(e);
    }
  }
  return sb.toString();
}
