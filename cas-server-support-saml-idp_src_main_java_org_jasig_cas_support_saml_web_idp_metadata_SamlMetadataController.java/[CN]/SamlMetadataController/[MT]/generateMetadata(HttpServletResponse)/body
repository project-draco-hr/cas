{
  if (StringUtils.isBlank(this.entityId) || StringUtils.isBlank(this.hostName) || StringUtils.isAllLowerCase(this.scope)) {
    logger.warn("Metadata cannot be generated, because the SAML Identity Provider is not configured." + " Examine settings and ensure metadata location, entityId, hostName and scope are all defined");
    return;
  }
  logger.debug("Preparing to generate metadata for entityId [{}]",this.entityId);
  final GenerateSamlMetadata generator=new GenerateSamlMetadata(this.metadataLocation,this.hostName,this.entityId,this.scope);
  if (generator.isMetadataMissing()) {
    logger.debug("Metadata does not exist at [{}]. Creating...",this.metadataLocation);
    generator.generate();
  }
  logger.debug("Metadata is available at [{}]",generator.getMetadataFile());
  final String contents=FileUtils.readFileToString(generator.getMetadataFile());
  response.setContentType("text/xml;charset=UTF-8");
  response.setStatus(HttpServletResponse.SC_OK);
  final PrintWriter writer=response.getWriter();
  logger.debug("Producing metadata for the response");
  writer.write(contents);
  writer.flush();
  writer.close();
}
