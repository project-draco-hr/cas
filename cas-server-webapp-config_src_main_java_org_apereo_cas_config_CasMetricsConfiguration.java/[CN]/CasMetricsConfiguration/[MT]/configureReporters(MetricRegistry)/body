{
  final Logger perfStatsLogger=LoggerFactory.getLogger(this.perfStatsLoggerName);
  registerReporter(Slf4jReporter.forRegistry(metricRegistry).outputTo(perfStatsLogger).convertRatesTo(TimeUnit.MILLISECONDS).convertDurationsTo(TimeUnit.MILLISECONDS).build()).start(this.perfStatsPeriod,TimeUnit.SECONDS);
  registerReporter(JmxReporter.forRegistry(metricRegistry).build());
}
