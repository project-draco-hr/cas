{
  final Resource ldaptiveProperties=new FileSystemResource("ldaptive.properties");
  final Resource extraConfig=new FileSystemResource("extraConfigContext.xml");
  this.propertyResourceMap.put("authenticationConfig",new Resource[]{ldaptiveProperties,new FileSystemResource("credentials.properties"),extraConfig});
  this.propertyResourceMap.put("monitorConfig",new Resource[]{ldaptiveProperties,extraConfig});
}
