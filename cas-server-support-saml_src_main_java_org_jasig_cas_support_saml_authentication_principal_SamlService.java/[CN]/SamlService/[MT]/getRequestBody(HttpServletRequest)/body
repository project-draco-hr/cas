{
  final StringBuilder builder=new StringBuilder();
  BufferedReader reader=null;
  try {
    reader=request.getReader();
    String line;
    while ((line=reader.readLine()) != null) {
      builder.append(line);
    }
    return builder.toString();
  }
 catch (  final Exception e) {
    return null;
  }
 finally {
    IOUtils.closeQuietly(reader);
  }
}
