{
  if (!"POST".equals(request.getMethod())) {
    return true;
  }
  if (exceedsThreshold(request)) {
    recordThrottle(request);
    final String username=StringEscapeUtils.escapeHtml4(request.getParameter(usernameParameter));
    response.sendError(403,"Access Denied for user [" + username + " from IP Address ["+ request.getRemoteAddr()+ "]");
    return false;
  }
  return true;
}
