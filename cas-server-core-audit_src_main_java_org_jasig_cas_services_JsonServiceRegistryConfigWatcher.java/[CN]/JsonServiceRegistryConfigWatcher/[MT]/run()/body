{
  if (running.compareAndSet(false,true)) {
    while (running.get()) {
      WatchKey key=null;
      try {
        key=watcher.take();
        handleEvent(key);
      }
 catch (      final InterruptedException e) {
        return;
      }
 finally {
        final boolean valid=(key != null && key.reset());
        if (!valid) {
          LOGGER.warn("Directory key is no longer valid. Quitting watcher service");
          break;
        }
      }
    }
  }
}
